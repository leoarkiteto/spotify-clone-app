root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4
trim_trailing_whitespace = true

[*.vue]
tab_width = 2

[{*.cjs,*.js}]
indent_style = tab
tab_width = 2

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_style = tab
tab_width = 2

[{*.http,*.rest}]
indent_size = 0
